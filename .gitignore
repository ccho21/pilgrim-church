### Gitignore for WordPress themes and pluggins development

# ignore everything in the root except the "wp-content" directory.
/*
!/public
/public/*
!/public/wp-content/

# ignore all files starting with .
.*

# ignore OS generated files
ehthumbs.db
Thumbs.db

# ignore log files and databases
*.log
*.sql
*.sqlite

#ignore package-lock.json
package-lock.json
sql/

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip


# ignore node/grunt/gulp dependency directories
node_modules/

# ignore specific themes
public/wp-content/themes/twenty*/
public/wp-content/plugins/


#ignore specific folder
public/wp-content/uploads

# ignore these plugins
public/wp-content/plugins/hello.php



# track this file .gitignore (i.e. do NOT ignore it)
!.gitignore
!gulpfile.js
!package.json
!npm-debug.log
!settings.js
!webpack.config.js

# ignore these index files
public/wp-content/index.php
public/wp-content/plugins/index.php
public/wp-content/themes/index.php